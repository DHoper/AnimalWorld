<% layout('layout/boilerplate') %>

    <div class="row mt-5" id="error">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading text-center">
                <%= err.message %>
            </h4>
            <hr>
            <% if(process.env.NODE_ENV != 'production') {%> 
            <p class="text-center">
                <%= err.stack %>
            </p>
            <%  }%> 
        </div>
    </div>