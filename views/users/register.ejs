<% layout('layout/boilerplate') %>

    <div id="register">
        <div class="outerContainer">
            <img src="image/login.png" alt="login">
            <h1>註&nbsp;&nbsp;冊</h1>
            <form action="/register" method="POST" class="validated" novalidate>

                <div class="mb-3">
                    <label class="form-label" for="username">使用者名稱</label>
                    <input class="form-control" type="text" name="username" id="username" required>
                    <div class="invalid-feedback">
                        請設定使用者名稱
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">暱稱</label>
                    <input class="form-control" type="text" name="nickname" id="nickname" required>
                    <div class="invalid-feedback">
                        此暱稱不可用
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">密碼</label>
                    <input class="form-control" type="password" name="password" id="password" required>
                    <div class="invalid-feedback">
                        請設定使用者密碼
                    </div>
                </div>
                <button class="btn">註&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;冊</button>
            </form>
        </div>
    </div>